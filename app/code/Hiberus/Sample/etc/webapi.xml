<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/sample/students" method="GET">
        <service class="Hiberus\Sample\Api\StudentRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/sample/students" method="POST">
        <service class="Hiberus\Sample\Api\StudentRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Hiberus_Sample::student"/>
        </resources>
    </route>
    <route url="/V1/sample/students/:studentId" method="DELETE">
        <service class="Hiberus\Sample\Api\StudentRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
